<%# Sidebar navigation for NotJustPesto app %>
<aside class="hidden md:flex w-64 flex-shrink-0 bg-surface-raised dark:bg-gray-900 border-r border-border-subtle dark:border-gray-800 flex-col h-full relative z-10">

  <%# Sidebar Header %>
  <div class="h-14 flex items-center px-4 border-b border-border-subtle dark:border-gray-800">
    <span class="font-bold tracking-tight text-gray-800 dark:text-gray-100">NotJustPesto</span>
  </div>

  <%# Sidebar Scroll Area %>
  <div class="flex-1 overflow-y-auto p-3 space-y-6">

    <%# Primary Nav - Library %>
    <div>
      <div class="px-3 mb-2 text-xs font-bold text-text-tertiary dark:text-gray-500 uppercase tracking-wider">Library</div>

      <%# All Recipes Link %>
      <%= link_to recipes_path, class: "w-full flex items-center justify-between px-3 py-2 text-sm rounded-md transition-all group mb-1 #{current_page?(recipes_path) && params[:view] != 'favorites' ? 'bg-white dark:bg-gray-800 shadow-sm text-brand-primary dark:text-amber-500 font-bold' : 'text-text-secondary dark:text-gray-300 hover:bg-black/5 dark:hover:bg-white/5 hover:text-gray-900 dark:hover:text-gray-100'}" do %>
        <div class="flex items-center gap-3">
          <%= lucide_icon "layout-grid", class: "size-4 #{current_page?(recipes_path) && params[:view] != 'favorites' ? 'text-brand-primary dark:text-amber-500' : 'text-text-tertiary dark:text-gray-500 group-hover:text-gray-600 dark:group-hover:text-gray-400'}" %>
          <span>All Recipes</span>
        </div>
        <span class="text-xs <%= current_page?(recipes_path) && params[:view] != 'favorites' ? 'text-brand-primary/70 dark:text-amber-500/70' : 'text-text-tertiary dark:text-gray-500' %>">
          <%= Recipe.count %>
        </span>
      <% end %>

      <%# Favorites Link %>
      <%= link_to recipes_path(view: 'favorites'), class: "w-full flex items-center justify-between px-3 py-2 text-sm rounded-md transition-all group mb-1 #{params[:view] == 'favorites' ? 'bg-white dark:bg-gray-800 shadow-sm text-brand-primary dark:text-amber-500 font-bold' : 'text-text-secondary dark:text-gray-300 hover:bg-black/5 dark:hover:bg-white/5 hover:text-gray-900 dark:hover:text-gray-100'}" do %>
        <div class="flex items-center gap-3">
          <%= lucide_icon "heart", class: "size-4 #{params[:view] == 'favorites' ? 'text-brand-primary dark:text-amber-500' : 'text-text-tertiary dark:text-gray-500 group-hover:text-gray-600 dark:group-hover:text-gray-400'}" %>
          <span>Favorites</span>
        </div>
        <span class="text-xs <%= params[:view] == 'favorites' ? 'text-brand-primary/70 dark:text-amber-500/70' : 'text-text-tertiary dark:text-gray-500' %>">
          <%= Recipe.where(favorite: true).count %>
        </span>
      <% end %>
    </div>

    <%# Planning Section - Placeholder %>
    <div>
      <div class="px-3 mb-2 text-xs font-bold text-text-tertiary dark:text-gray-500 uppercase tracking-wider">Planning</div>

      <%# Meal Plan - Placeholder %>
      <button class="w-full flex items-center justify-between px-3 py-2 text-sm rounded-md transition-all group mb-1 text-gray-600 dark:text-gray-400 hover:bg-black/5 dark:hover:bg-white/5 hover:text-gray-900 dark:hover:text-gray-200 opacity-50 cursor-not-allowed" disabled>
        <div class="flex items-center gap-3">
          <%= lucide_icon "calendar", class: "size-4 text-gray-400 dark:text-gray-500 group-hover:text-gray-600 dark:group-hover:text-gray-400" %>
          <span>Meal Plan</span>
        </div>
        <span class="text-xs text-gray-400 dark:text-gray-500">Soon</span>
      </button>

      <%# Shopping List - Placeholder %>
      <button class="w-full flex items-center justify-between px-3 py-2 text-sm rounded-md transition-all group mb-1 text-gray-600 dark:text-gray-400 hover:bg-black/5 dark:hover:bg-white/5 hover:text-gray-900 dark:hover:text-gray-200 opacity-50 cursor-not-allowed" disabled>
        <div class="flex items-center gap-3">
          <%= lucide_icon "shopping-cart", class: "size-4 text-gray-400 dark:text-gray-500 group-hover:text-gray-600 dark:group-hover:text-gray-400" %>
          <span>Shopping List</span>
        </div>
        <span class="text-xs text-gray-400 dark:text-gray-500">Soon</span>
      </button>
    </div>

    <%# Tags Section - Placeholder %>
    <div>
      <div class="px-3 mb-2 text-xs font-bold text-text-tertiary dark:text-gray-500 uppercase tracking-wider flex justify-between items-center">
        <span>Tags</span>
        <%= lucide_icon "plus", class: "size-3 text-gray-400 dark:text-gray-500 opacity-50" %>
      </div>
      <div class="px-3 text-xs text-gray-500 dark:text-gray-400 italic">Coming soon...</div>
    </div>
  </div>

  <%# Sidebar Footer - User Profile Placeholder %>
  <div class="p-3 border-t border-border-subtle dark:border-gray-800">
    <button class="w-full flex items-center gap-3 px-3 py-2 text-sm rounded-md hover:bg-black/5 dark:hover:bg-white/5 transition-colors text-left">
      <div class="w-8 h-8 rounded-full bg-gray-300 dark:bg-gray-700 flex items-center justify-center overflow-hidden">
        <%= lucide_icon "user", class: "size-4 text-gray-500 dark:text-gray-400" %>
      </div>
      <div class="flex-1 min-w-0">
        <div class="font-medium text-gray-900 dark:text-gray-100 truncate">My Kitchen</div>
        <div class="text-xs text-gray-500 dark:text-gray-400 truncate">Free Plan</div>
      </div>
      <%= lucide_icon "settings", class: "size-3.5 text-gray-400 dark:text-gray-500" %>
    </button>
  </div>
</aside>
